// Model in prisma are tables

model Trip {
  id          String    @id @default(cuid())
  title       String
  description String
  imageUrl    String?
  startDate   DateTime
  endDate     DateTime
  // user can create multiple trips, so when user creates a trip then that trip should only reffered to them and it should linked to them.
  user        User      @relation(fields: [userId], references: [id] )
  userId      String

  locations   Location[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Location {
  id String @id @default(cuid())
  locationTitle String
  lat Float
  lng Float
  trip Trip @relation(fields: [tripId], references: [id] )
  tripId String
  order Int @default(0)
  createdAt DateTime @default(now())
}